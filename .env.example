# Artemox API Key
# Получите здесь: https://artemox.com/ui
ARTEMOX_API_KEY=your_artemox_api_key_here

# Artemox API Base URL (по умолчанию: https://api.artemox.com/v1)
ARTEMOX_API_BASE=https://api.artemox.com/v1

# Telegram Bot Token
# Получите от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID администраторов (через запятую, для /broadcast, /users, /logs)
# Узнать свой ID: @userinfobot
ADMIN_IDS=1086785064

# Nano Banana API Key (опционально, для генерации изображений)
# Получите здесь: https://nanobananaapi.ai/api-key
# Используется как резервный метод, если Artemox недоступен
NANOBANANA_API_KEY=

# Использовать Nano Banana для генерации изображений (true/false)
# По умолчанию: true (если указан NANOBANANA_API_KEY)
USE_NANOBANANA_FOR_IMAGES=true

# PostHog (аналитика)
POSTHOG_API_KEY=
POSTHOG_HOST=https://us.posthog.com

# OpenAI (для Whisper, fallback LLM при падении Gemini)
OPENAI_API_KEY=

# DeepSeek (fallback LLM при падении Gemini)
DEEPSEEK_API_KEY=

# ========== Продакшен (~80k пользователей): webhooks, PostgreSQL, Redis, лимит LLM ==========
# Для локальной разработки: USE_WEBHOOKS=false и закомментируйте DATABASE_URL (будет SQLite).
# Webhooks — обязательно при высокой нагрузке. Nginx + SSL по docs/WEBHOOKS.md.
USE_WEBHOOKS=true
WEBHOOK_URL=https://ваш-домен.com
WEBHOOK_PORT=8443

# PostgreSQL — при пустом используется SQLite. После настройки: alembic upgrade head
DATABASE_URL=postgresql://user:password@host:5432/nero_ai

# Redis — один и тот же REDIS_URL для всех инстансов бота (rate limit + taskiq)
REDIS_URL=redis://localhost:6379/0

# Лимит одновременных запросов к LLM (подстройте под план Artemox)
MAX_CONCURRENT_LLM_REQUESTS=80

# Prometheus metrics (порт)
# METRICS_PORT=9090

# Пароль для веб-админки (Streamlit). Пусто = без защиты
ADMIN_PANEL_PASSWORD=

# RAG (база знаний по PDF). По умолчанию gemini-embedding-001 (если API блокирует — попробуйте text-embedding-004)
# RAG_CHROMA_PATH=data/chroma
# RAG_EMBEDDING_MODEL=gemini-embedding-001

# Примечание: Генерация изображений использует:
# 1. Artemox API (gemini-3-pro-image-preview, imagen-*)
# 2. Nano Banana API (если указан ключ)
# 3. Pollinations.ai (бесплатный fallback)
